{
  "name": "ilia-nodejs-challenge",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:prod": "docker compose -f docker-compose.prod.yml --env-file .env.prod up -d --build",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml --env-file .env.prod down 2>/dev/null || docker compose -f docker-compose.prod.yml down",
    "db:migrate": "npm run prisma:migrate --workspace=ms-users && npm run prisma:migrate --workspace=ms-transactions",
    "dev:users": "npm run start:dev --workspace=ms-users",
    "dev:transactions": "npm run start:dev --workspace=ms-transactions",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev": "npm run dev:users & npm run dev:transactions & npm run dev:frontend",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:e2e": "npm run test:e2e --workspaces",
    "lint": "npm run lint --workspaces",
    "prepare": "husky || true"
  },
  "lint-staged": {
    "packages/ms-transactions/**/*.ts": [
      "npm run lint --workspace=ms-transactions"
    ],
    "packages/ms-users/**/*.ts": [
      "npm run lint --workspace=ms-users"
    ],
    "packages/frontend/**/*.{ts,tsx}": [
      "npm run lint --workspace=frontend"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}
